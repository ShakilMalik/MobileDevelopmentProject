<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <DatePicker
        android:id="@+id/datePicker"
        android:headerBackground="#4b8c4f"
        android:layout_x="0dp"
        android:layout_y="-1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="220dp"
        android:layout_height="95dp" />

    <Button
        android:text="Menu"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button4"
        android:background="@android:color/holo_green_dark"
        android:layout_width="83dp" />

    <Button
        android:id="@+id/btnAdd"
        android:text="Add New Item"
        android:layout_height="wrap_content"
        android:onClick="addItems"
        android:layout_x="-2dp"
        android:layout_y="556dp"
        android:layout_width="130dp"
        android:background="@android:color/holo_green_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtRemove"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnRemove"
        android:layout_toEndOf="@+id/btnRemove"
        android:gravity="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:layout_below="@+id/txtMonthlyBudget"
        android:layout_alignLeft="@+id/txtMonthlyBudget"
        android:layout_alignStart="@+id/txtMonthlyBudget" />

    <TextView
        android:text="Monthly Budget:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMonthlyBudget"
        android:textSize="18sp"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/datePicker"
        android:layout_toEndOf="@+id/datePicker"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:text="Daily Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="16sp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="Remove Item"
        android:layout_height="wrap_content"
        android:id="@+id/btnRemove"
        android:layout_x="150dp"
        android:layout_y="557dp"
        android:layout_width="130dp"
        android:background="@android:color/holo_green_dark"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:drawSelectorOnTop="false"
        android:layout_weight="0.99"
        android:layout_x="-1dp"
        android:layout_y="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_above="@+id/button4" />

</RelativeLayout>
